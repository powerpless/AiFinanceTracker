<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="AiFinanceTracker">
        <createTable tableName="VERIFICATION_CODE">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_VERIFICATION_CODE"/>
            </column>
            <column name="EMAIL" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="CODE" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="CODE_TYPE" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="EXPIRY_DATE" type="${offsetDateTime.type}">
                <constraints nullable="false"/>
            </column>
            <column name="USED" type="BOOLEAN"/>
            <column name="ATTEMPTS" type="INT"/>
            <column name="CREATED_DATE" type="${offsetDateTime.type}">
                <constraints nullable="false"/>
            </column>
            <column name="USED_DATE" type="${offsetDateTime.type}"/>
        </createTable>
    </changeSet>
    <changeSet id="2" author="AiFinanceTracker">
        <addColumn tableName="USER_">
            <column name="EMAIL_VERIFIED" type="BOOLEAN"/>
        </addColumn>
    </changeSet>
</databaseChangeLog>